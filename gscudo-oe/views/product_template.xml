<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- product.template inherit form view -->
    <record id="view_id" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//page" position="after">
                <page string="GruppoScudo" groups="gscudo-oe.group_user,gscudo-oe.group_manager">
                    <group>
                        <field name="product_family_id" options="{'no_create':1, 'no_edit':1, 'no_open':1}" />
                        <field name="sg_product_id" />
                        <field name="sg_url" widget="url" readonly="1" text="link" />
                        
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>