-->

    <!-- Top menu item -->

    <menuitem name="IT Assets" id="itasset_menu" groups="gscudo-itasset.group_it_manager"/>

    <!-- menu categories -->
    <!--
    <menuitem name="Menu 1" id="gscudo-itasset.menu_1" parent="gscudo-itasset.menu_root"/>
    <menuitem name="Menu 2" id="gscudo-itasset.menu_2" parent="gscudo-itasset.menu_root"/>
-->
    <!-- actions -->

    <menuitem name="Lista" id="gscudo-itasset.itasset_list" parent="itasset_menu" action="gscudo-itasset.action_window" />

  </data>
</odoo>