<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="gscudo-itasset.list">
      <field name="name">Attrezzature IT</field>
      <field name="model">gs_itasset</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="itasset_type_id" />
          <field name="description" />
          <field name="status" />
          <field name="employee_id" />
         
          <field name="department" />
          <field name="itasset_location" /> 
          
        </tree>
      </field>
    </record>

    <record id="gs_itasset_form" model="ir.ui.view">
      <field name="name">IT Asset</field>
      <field name="model">gs_itasset</field>
      <field name="arch" type="xml">
        <form string="">
          <header>
          </header>
          <sheet>
            <group>
              <group>
              <field name="name" />
              <field name="itasset_type_id" />
              <field name="description" />
              <field name="serial" />
              <field name="status" />
              <field name="parent_id" />
            </group>
            <group>
              <field name="employee_id" attrs="{'readonly':[('parent_id','!=',False)]}" />
              <field name="department" />
              <field name="itasset_location" /> 
              <field name="note"></field>
            </group>
            </group>
            <group>
              <field name="children_ids" />
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="gscudo-itasset.action_window">
      <field name="name">IT Assets</field>
      <field name="res_model">gs_itasset</field>
      <field name="view_mode">tree,form,activity</field>
    </record>

    <!-- server action to the one above -->
