<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gs_visit_view_form" model="ir.ui.view">
        <field name="name">gs_visit_view_form</field>
        <field name="model">gs_visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="visit_scheduler_id" />
                        <field name="date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gs_visit_view_tree" model="ir.ui.view">
        <field name="name">gs_visit_view_tree</field>
        <field name="model">gs_visit</field>
        <field name="arch" type="xml">
            <tree default_order="date">
                <field name="name" />
                <field name="visit_scheduler_id" />
                <field name="date" />
                <field name="agent_id" />
                <field name="technician_id" />
                <field name="partner_id" />
                <field name="confirmed" widget="boolean_toggle"/>
                <field name="done" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

