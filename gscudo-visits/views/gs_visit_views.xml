    <!-- gs_visit action -->
    <record id="view_gs_visit_action" model="ir.actions.act_window">
        <field name="name">Visite (prototipo)</field>
        <field name="res_model">gs_visit</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="gs_visit_view_tree" />
