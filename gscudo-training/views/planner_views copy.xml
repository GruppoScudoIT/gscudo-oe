<odoo>
  <data>

    <record id="straining_planner_view_tree" model="ir.ui.view">
      <field name="name">Pianificatore Corsi</field>
      <field name="model">gstraining_planner</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="name" />
          <field name="course_date" />
          <field name="lesson_dates" optional="show" />
          <field name="lesson_times" optional="show" />
          <field name="course_type" optional="show" />

          <field name="place" optional="show" />
          <field name="partner_id" optional="show" />
          <field name="invoice_ref" optional="show" />
          <field name="offer_id" optional="show" />
          <field name="offer_date" optional="hide" />
          <field name="unit_price" optional="hide" />
          <field name="total_price" optional="hide" />
          <field name="customer_order" optional="hide" />
          <field name="customer_payment" optional="hide" />
          <field name="course_family" optional="hide" />
          <field name="tot_hours" optional="show" />
          <field name="tot_qty" optional="show" />
          <field name="tutor" optional="hide" />
          <field name="tutor_price" optional="hide" />
          <field name="tutor_order_ref" optional="hide" />
          <field name="tutor_order_date" optional="hide" />
          <field name="place_price" optional="hide" />
          <field name="material_supplier" optional="hide" />
          <field name="material_price" optional="hide" />
          <field name="note" optional="hide" />

        </tree>
      </field>
    </record>

    <!-- gstrainig_planner form view -->
    <record id="gstraining_planner_view_form" model="ir.ui.view">
      <field name="name">Pianificatore Corsi</field>
      <field name="model">gstraining_planner</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <group>
                <field name="name" />
                <field name="course_family" />
                <field name="course_date" />
                <field name="lesson_dates" />
                <field name="lesson_times" />
                <field name="course_type" />
                <field name="place" />
              </group>
              <group>
                <field name="offer_id" />
                <field name="offer_date" />
                <field name="unit_price" />
                <field name="total_price" />
                <field name="customer_order" />
                <field name="customer_payment" />

                <field name="tot_hours" />
                <field name="tot_qty" />
              </group>
            </group>
            <group>
              <group>
                <field name="tutor_price" />
                <field name="tutor_order_ref" optional="hide" />
                <field name="tutor_order_date" optional="hide" />

              </group>
              <group>
                <field name="place_price" />
                <field name="place_price" />
                <field name="material_supplier" />
                <field name="material_price" />
              </group>
            </group>
            <group>
              <field name="note" />
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>

    <record id="gstraining_planner_view_calendar" model="ir.ui.view">
      <field name="name">Calendario Pianif</field>
      <field name="model">gstraining_planner</field>
      <field name="arch" type="xml">
        <calendar date_start="course_date" color="place">
          <field name="name" />
          <field name="course_type" />
          <field name="tutor" />
        </calendar>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gstraining_planner_action_window">
      <field name="name">Pianificatore</field>
      <field name="res_model">gstraining_planner</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>


    <!-- actions -->

    <menuitem name="List" id="gscudo-training.menu_1_list" parent="gscudo-training.gstraining_menu_root" action="gstraining_planner_action_window" />

  </data>
</odoo>