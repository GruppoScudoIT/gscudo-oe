<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gs_worker_certificate_view_form" model="ir.ui.view">
        <field name="name">gs_worker_certificate_view_form</field>
        <field name="model">gs_worker_certificate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="gs_worker_id" />
                        <field name="contract_partner_id" />
                        <field name="gs_certificate_type_id" />
                        <field name="name" />
                        <field name="type" />
                        <field name="issue_date" />
                        <field name="issue_serial" />
                        <field name="expiry_date" />
                        <field name="expiring" />
                        <field name="expired" />
                        <field name="passed" />
                        <field name="is_update"/>
                        <field name="note" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="gs_worker_certificate_view_tree" model="ir.ui.view">
        <field name="name">gs_worker_certificate_view_tree</field>
        <field name="model">gs_worker_certificate</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0" default_order="name desc">
                <field name="contract_partner_id" />
                <field name="gs_worker_id" />
                <!-- TODO what is type="col" here? -->
                <field name="gs_certificate_type_id" type="col" />
                <field name="type" type="col" />
                <field name="issue_date" />
                <field name="issue_serial" />
                <field name="is_update" />
                <field name="passed"/>
                <field name="expiring" />
                <field name="expired" />
            </tree>
        </field>
    </record>

    <!-- TODO this doesn't work -->
    <record id="gs_worker_certificate_view_pivot" model="ir.ui.view">
        <field name="name">gs_worker_certificate_view_pivot</field>
        <field name="model">gs_worker_certificate</field>
        <field name="arch" type="xml">
            <pivot string="Certificati/Attestati">
                <field name="contract_partner_id" type="row" />
                <field name="gs_worker_id" type="row" />
                <field name="type" type="col" />
                <field name="gs_certificate_type_id" type="col" />
                <field name="expiry_date" interval="month" type="col" />
            </pivot>
        </field>
    </record>

    <record id="gs_worker_certificate_view_search" model="ir.ui.view">
        <field name="name">gs_worker_certificate Search</field>
        <field name="model">gs_worker_certificate</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="gs_worker_id" />
                <field name="contract_partner_id" />
                <field name="gs_certificate_type_id" />
                <field name="expiry_date" />
                <field name="note" />

                <filter
                    name="filter_expiring"
                    domain="['&amp;',('expiry_date','&gt;=',((context_today()).strftime('%Y-%m-%d'))),('expiry_date','&lt;=',((context_today()+relativedelta(months=2)).strftime('%Y-%m-%d')))]"
                    string="In scadenza"
                />
                <filter name="filter_expired" domain="[('expiry_date','&lt;=',((context_today()).strftime('%Y-%m-%d')))]" string="Scaduti" />
                <separator />
                <filter name="expiry_date" date="expiry_date" string="Data scadenza" />
                <separator />
                <filter name="filter_type_E" domain="[('type','=','E')]" string="Esigenza formativa" />
                <filter name="filter_type_C" domain="[('type','=','C')]" string="Certificato/Attestato" />
                <separator />
                <filter name="filter_not_passed" domain="[('passed','=',False)]" string="Non superati" />
                <filter name="filter_archived" domain="[('active','=',0)]" string="Archiviati" />
                
                <group expand="1" string="Group By">
                    <filter string="Azienda" name="contract_partner_id" context="{'group_by':'contract_partner_id'}" />
                    <filter string="Lavoratore" name="gs_worker_id" context="{'group_by':'gs_worker_id'}" />
                    <filter string="Tipologia" name="gs_certificate_type_id" context="{'group_by':'gs_certificate_type_id'}" />
                    <filter string="Scadenza" name="expiry_date" context="{'group_by':'expiry_date'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- gs_worker_certificate action -->
    <record id="gs_worker_certificate_action_view_tree" model="ir.actions.act_window">
        <field name="name">Certificati/Attestati</field>
        <field name="res_model">gs_worker_certificate</field>
        <field name="domain"></field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="view_id" ref="gs_worker_certificate_view_tree" />
    </record>

    <menuitem
        id="gs_worker_certificate_menu"
        name="Certificati/Attestati"
        parent="gs_training_menu_backoffice"
        sequence="80"
        action="gs_worker_certificate_action_view_tree"
        groups="gscudo-training.group_training_manager"
    />
</odoo>
